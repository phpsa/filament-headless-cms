{
    "name": "phpsa/filament-headless-cms",
    "description": "Headless CMS for filament",
    "keywords": [
        "filament",
        "laravel",
        "headless",
        "cms"
    ],
    "homepage": "https://github.com/phpsa/filament-headless-cms",
    "support": {
        "issues": "https://github.com/phpsa/filament-headless-cms/issues",
        "source": "https://github.com/phpsa/filament-headless-cms"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Craig G Smith",
            "email": "vxdhost@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "spatie/laravel-package-tools": "^1.13.5",
        "illuminate/contracts": "^10.0|^11.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.0",
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-laravel": "^2.3",
        "pestphp/pest-plugin-livewire": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Phpsa\\FilamentHeadlessCms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpsa\\FilamentHeadlessCm\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --parallel --no-coverage",
        "phpstan": "vendor/bin/phpstan analyse",
        "fix": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Phpsa\\FilamentHeadlessCm\\CmsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
